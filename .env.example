# RAG系统环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# ========== LeanCloud配置 ==========
VITE_USE_LEANCLOUD=true
VITE_LEANCLOUD_APP_ID=your_leancloud_app_id
VITE_LEANCLOUD_APP_KEY=your_leancloud_app_key
VITE_LEANCLOUD_SERVER_URL=https://your-server-url.com

# ========== DeepSeek AI配置 ==========
VITE_DEEPSEEK_API_KEY=sk-your-deepseek-api-key

# ========== OSS配置（可选） ==========
VITE_OSS_REGION=oss-cn-shenzhen
VITE_OSS_ACCESS_KEY_ID=your_oss_access_key_id
VITE_OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
VITE_OSS_BUCKET=your-bucket-name

# ========== 功能开关 ==========
VITE_USE_OSS=true
VITE_USE_SUPABASE=false
VITE_USE_ALIYUN_DB=false

# ========== RAG配置 ==========
# 向量检索配置
RAG_DEFAULT_TOP_K=3
RAG_DEFAULT_THRESHOLD=0.75
RAG_MAX_CHUNK_SIZE=400
RAG_OVERLAP_SIZE=80

# API限流配置
RATE_LIMIT_PER_MINUTE=30
MAX_UPLOAD_SIZE_MB=10
